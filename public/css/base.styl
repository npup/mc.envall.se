/* layout */
html *
  -moz-box-sizing border-box
  box-sizing border-box

body
  font-family Verdana

#wrap
  min-width 960px
  max-width 1200px
  margin 0 auto
  margin-top 2em
  padding 1em
  background-color #f2f2f2
  border-radius 3px

nav ul
  list-style-type none
  margin 0 auto
  padding 0
  text-align center

nav li
  display inline-block
  padding 0 1em

nav a
  display block
  text-align center
  font-size 1.8em

a
nav a
  &:link
  &:visited
  &:active
    text-decoration none
    color #333

nav a:hover
  text-decoration underline


a:hover
  color #248

footer
  text-align center


#content
  clear left
  padding 1em

h1
  margin-top 0

/* components */
nav.home #home a
nav.maps #maps a
  color #248

.selected
  background-color #fcfcfc

dl.flaps
  position relative
  height 650px
  margin 0

dl.flaps dt
  display inline
  padding .2em .5em
  margin-right .2em
  border 2px solid #888
  border-bottom none
  border-radius 8px 8px 0 0
  font-size 1.2em

dl.flaps dt a
  display inline-block

dl.flaps dd
  position absolute
  bottom -2em
  margin 0
  width 100%
  display none


dl.flaps dt.selected + dd
  display block

iframe.overview
  width 100%
  height 650px
  border none
  border-top 2px solid #888


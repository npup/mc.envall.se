/* layout */
html *
  -moz-box-sizing border-box
  box-sizing border-box

body
  font-family Verdana

#wrap
  min-width 960px
  max-width 1200px
  margin 0 auto
  margin-top 2em
  padding 1em
  background-color #f2f2f2
  border-radius 3px

nav ul
  list-style-type none
  margin 0 auto
  padding 0
  text-align center

nav li
  display inline-block
  padding 0 1em

nav a
  display block
  text-align center
  font-size 1.8em

a
nav a
  &:link
  &:visited
  &:active
    text-decoration none
    color #333

nav a:hover
  text-decoration underline


a:hover
  color #248

footer
  text-align center


#content
  clear left
  padding 1em

h1
  margin-top 0

/* components */
nav.home #home a
nav.maps #maps a
  color #248

.selected
  background-color #ffc


iframe.overview
  width 100%
  height 650px
